<p id="notice"><%= notice %></p>

<h1>Listing Relatives of the <%=current_user.username%> family</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relatives.each do |relative| %>
    <tr>
      <td> <%= relative.first_name %> <%= relative.last_name %> </td>
      <td> <%= link_to 'More', relative %> </td>
      <td> <%= link_to 'Delete', relative, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


<button> <%= link_to 'New Relative', new_relative_path %> </button>
