<p id="notice"><%= notice %></p>

<div id="member">
	<% count = 1 %>
	<% @relatives.each do |relative| %>	
	<% if relative.user_id == current_user.id %>
	<div class="family-member">
		<div class="modal">
			<label for=<%= "modal-#{count}" %>>
				<div class="modal-trigger"><%= image_tag relative.image.url(:medium) %></div>
			</label>
			<input class="modal-state" id= <%= "modal-#{count}" %> type="checkbox" />
			<div class="modal-fade-screen">
				<div class="modal-inner">
					<label class="modal-close" for=<%= "modal-#{count}" %>></label>
					<p> <%= image_tag relative.image.url(:medium) %> </p>
					<h1><%= relative.first_name%> <%= relative.last_name %></h1>
					<p>Biography: <%= relative.biography %></p>
					<p>Birthday: <%= relative.birthday %></p>
				</div>
			</div>
		</div>
	</div>
	<% end %>
	<% count += 1 %>
	<% end %>
</div>


